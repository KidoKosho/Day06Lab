@model List<Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h2 class="text-center">DANH SÁCH SINH VIÊN</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm sinh viên mới</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Chưa có sinh viên nào được thêm!</div>
}
else
{
    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Ngày sinh</th>
                <th>Ngành học</th>
                <th>Điểm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.Gender</td>
                    <td>@s.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@s.Branch</td>
                    <td>@s.Score</td>
                </tr>
            }
        </tbody>
    </table>
}
